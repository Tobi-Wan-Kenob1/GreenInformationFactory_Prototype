{
  "project": "GreenInformationFactory_Prototype",

  "dataset": {
    "source": "zenodo",
    "doi": "10.5281/zenodo.16256961",
    "raw_filename": "BioFairNet_Pilot1_Testrun.csv",
    "separator": ";",
    "encoding": "utf-8",
    "dummy_mode": false
  },

  "ml": {
    "features": ["time", "temperature", "Stiring"],
    "target": "pressure",
    "random_seed": 42,

    "splits": {
      "holdout_fraction": 0.2,
      "train_fraction_within_train": 0.8
    },

    "models_default": ["linreg", "rf", "gbr", "svr", "mlp"],

    "gridsearch": {
      "cv_folds": 5,
      "n_jobs": -1,
      "refit_metric": "rmse",
      "scoring": ["rmse", "r2"]
    }
  },

  "sustainability": {
    "enabled": true,
    "metrics": ["co2", "mci"],
    "standard_future": "ISO 14075:2024"
  },

  "paths": {
    "raw_dir": "data/raw",
    "processed_dir": "data/processed",
    "results_dir": "data/results",

    "models_dir": "notebooks/models",

    "run_logs_dir": "metadata/runs"
  }
}
